  <!-- Модальное окно -->
  <div id="modal-backdrop" class="modal-backdrop">
    <div class="modal">
      <button id="modal-close" class="close-btn">&times;</button>
      <h3>Оставьте заявку</h3>
      <form id="order-form">
        <input type="text" name="name" placeholder="Имя" required>
        <input type="email" name="email" placeholder="E-mail" required>
        <input type="tel" name="phone" placeholder="Телефон" pattern="\\d+" required>
        <input type="hidden" name="package" id="package-field">
        <button type="submit" class="submit-btn">Отправить</button>
      </form>
      <div id="thanks" class="thanks">
        <p>Спасибо! Мы свяжемся с вами в ближайшее время.</p>
      </div>
    </div>
  </div>

  <script>
    // Здесь точка подключения Telegram Web Apps API
    // window.Telegram.WebApp = ...

    // Навигация между вью
    const viewAbout = document.getElementById('view-about');
    const viewPackages = document.getElementById('view-packages');
    document.getElementById('btn-start').addEventListener('click', () => {
      viewAbout.style.transform = 'translateY(-100%)';
      viewPackages.style.transform = 'translateY(0)';
    });

    // Открытие модалки
    document.querySelectorAll('.btn-select').forEach(btn => {
      btn.addEventListener('click', () => {
        const pkg = btn.closest('.card').dataset.package;
        document.getElementById('package-field').value = pkg;
        document.getElementById('modal-backdrop').style.display = 'flex';
      });
    });
    document.getElementById('modal-close').addEventListener('click', () => {
      document.getElementById('modal-backdrop').style.display = 'none';
      resetModal();
    });

    // Валидация и эмуляция отправки
    const form = document.getElementById('order-form');
    const thanks = document.getElementById('thanks');
    form.addEventListener('submit', e => {
      e.preventDefault();
      if (!form.checkValidity()) {
        form.reportValidity();
        return;
      }
      // Эмуляция отправки
      form.style.display = 'none';
      thanks.style.display = 'block';
      setTimeout(() => {
        resetModal();
        document.getElementById('modal-backdrop').style.display = 'none';
      }, 3000);
    });

    function resetModal() {
      form.reset();
      form.style.display = 'flex';
      thanks.style.display = 'none';
    }
  </script>
</body>
